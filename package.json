{
  "name": "e-coc-schemas",
  "version": "1.0.0",
  "description": "E-CoC JSON schema and dependencies developed by S1Seven",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/s1seven/E-CoC-schemas.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/s1seven/E-CoC-schemas/issues"
  },
  "homepage": "https://github.com/s1seven/E-CoC-schemas#readme",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ./*.js",
    "lint:staged": "lint-staged",
    "format": "prettier --write \"**/*.{js,json}\"",
    "test": "jest --runInBand",
    "update-version": "node ./utils/update-version",
    "release": "read -p 'GITHUB_TOKEN: ' GITHUB_TOKEN && export GITHUB_TOKEN=$GITHUB_TOKEN && release-it"
  },
  "devDependencies": {
    "@s1seven/schema-tools-utils": "0.0.25",
    "@s1seven/schema-tools-versioning": "^0.1.0",
    "ajv": "^8.8.0",
    "ajv-formats": "^2.1.0",
    "eslint": "^8.4.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.3",
    "lint-staged": "^12.1.2",
    "pre-commit": "^1.2.2",
    "prettier": "2.5.1",
    "release-it": "*"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "pre-commit": [
    "format",
    "lint:staged"
  ],
  "release-it": {
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": [
        "npm run lint",
        "npm run test"
      ],
      "after:bump": "npm run update-version v${version} ${name}",
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    }
  },
  "jest": {
    "rootDir": ".",
    "maxConcurrency": 2,
    "testRegex": ".*\\.spec\\.js$",
    "moduleFileExtensions": [
      "js",
      "node"
    ]
  }
}
